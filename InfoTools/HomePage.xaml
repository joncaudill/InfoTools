<Page x:Class="InfoTools.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="AlertCanvas" Height="50" Background="Red" Visibility="Hidden" Grid.Row="0" ClipToBounds="True">
            <TextBlock x:Name="AlertText" FontFamily="Consolas" FontSize="18" Foreground="LightGray">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="2" Opacity="1" BlurRadius="0"  />
                </TextBlock.Effect>
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>

        <StackPanel Margin="20" Grid.Row="1">
            <TextBlock Text="Welcome to InfoTools" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Pages:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="• Home - Main dashboard" FontSize="16" Margin="0,0,0,5"/>
                <TextBlock Text="• Favicon Identifier - Identify favicons using a local database" FontSize="16" Margin="0,0,0,5"/>
                <TextBlock Text="• Get Site Headers - Retrieve HTTP headers from a website" FontSize="16" Margin="0,0,0,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
