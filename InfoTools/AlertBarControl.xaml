<UserControl x:Class="InfoTools.AlertBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InfoTools"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">

    <Grid>
        <Canvas x:Name="AlertCanvas" Height="50" Background="Red" Visibility="Hidden" ClipToBounds="True">
            <TextBlock x:Name="AlertText" FontFamily="Consolas" FontSize="18" Foreground="LightGray">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="2" Opacity="1" BlurRadius="0"  />
                </TextBlock.Effect>
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
    </Grid>
</UserControl>