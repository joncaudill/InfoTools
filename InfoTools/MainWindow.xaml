<Window x:Class="InfoTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoTools"
        mc:Ignorable="d"
        Title="Infotools" Height="450" Width="800">
    <DockPanel>
        <!-- Navigation Pane -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#FF2D2D30">
            <TextBlock Text="InfoTools"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="16,24,0,32"/>
            <!-- Home Button -->
            <Button Name="HomeButton"
                    HorizontalAlignment="Left"
                    Margin="8,0,0,8"
                    Padding="8"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="HomeButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Home" FontSize="16"/>
                </StackPanel>
            </Button>
            <!-- Favicon Identifier Button -->
            <Button Name="FaviconIdentifierButton"
                    HorizontalAlignment="Left"
                    Margin="8,0,0,8"
                    Padding="8"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="FaviconIdentifierButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE774;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Favicon Identifier" FontSize="16"/>
                </StackPanel>
            </Button>
            <!-- Get Site Headers Button -->
            <Button Name="GetSiteHeadersButton"
                    HorizontalAlignment="Left"
                    Margin="8,0,0,8"
                    Padding="8"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="GetSiteHeadersButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE71B;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Get Site Headers" FontSize="16"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <!-- Main Content Area -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>